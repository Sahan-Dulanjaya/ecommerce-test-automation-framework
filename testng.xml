<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite parallel="tests" name="Product Test Suite">

    <listeners>
        <listener class-name="ecommercewebsite.TestComponents.Listeners"/>
    </listeners>

    <test thread-count="5" name="Submit Order Test">
        <classes>
            <class name="ecommercewebsite.SubmitOrderTest"/>
        </classes>
    </test>

    <test thread-count="5" name="Error Validations Test">
        <classes>
            <class name="ecommercewebsite.ErrorValidations"/>
        </classes>
    </test>

</suite>

